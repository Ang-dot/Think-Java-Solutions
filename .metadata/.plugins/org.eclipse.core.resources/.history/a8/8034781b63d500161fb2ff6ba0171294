package Exercises;

import java.util.Arrays;

public class Test {

	public static void main(String[] args) {
		char letter = 'x';
		
		System.out.println(letter - 'a');
		
		String alphabet = "ijsadoijaoidj[aoijdaosidj";
		
		System.out.println(Arrays.toString(letterHist(alphabet)));
		
		
		
		
		


	}
	
	public static int[] letterHist(String s) {
		
		//array for amt of letters in alphabet
		int[] hist = new int[26];
		
		for (int i = 0; i < s.length(); i++) {
			char curChar = s.toLowerCase().charAt(i);
			
			if ('a' <= curChar && curChar<= 'z') {
				hist[curChar-'a']++;
			}
		}
		
		return hist;
	}

}
