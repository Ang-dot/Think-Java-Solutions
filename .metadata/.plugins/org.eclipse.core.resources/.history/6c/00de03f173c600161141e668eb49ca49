
public class PrintAmerican {
	
	public static void printAmerican(String day, int date, String month, String year) {
		System.out.println("American Format:");
		System.out.println(day +"," + month + " " + date + ", " + year);
		System.out.println();
		System.out.println("Tomorrow's date in EU format:");
		System.out.println(day + " " + (++date) + " " + month + " " + year);
	}
	
	public static void main(String[] args) {
		printAmerican("Thursday", 19, "December", "2016");
	}
	
	
	
//	String day = "Thursday";
//	String month = "July";
//	int date = 16;
//	int year = 2016;
	
}
