
public class Recursion {
	
	public static void countdown(int n) {
		if (n == 0) {
			System.out.println("No bottles of beer on the wall!");
		} else {
			System.out.println(n + "bottle of beer on the wall");
			countdown(n-1);
		}
	}
	
	public static void main(String[] args) {
		countdown(100);
	}
	
	
}
