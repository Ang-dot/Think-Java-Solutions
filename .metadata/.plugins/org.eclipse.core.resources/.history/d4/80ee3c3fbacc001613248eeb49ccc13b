
public class Factorial {

	public static void main(String[] args) {
	System.out.println(myExp(3,3));
	
	}

	
	public static double myExp(double x, int n) {
		//used to square the number
		double ansX = x;
		//collects the sum
		double ans = 0;
		
		//begin at 2 to skip over 1 and (x+(fact(1)). these are in the return statement.
		int i = 2;
		
		while (i <= n) {
			//square the number
			ansX = ansX * x;
			//take the squared number and divide it by factorial of i
			ans = ans + ansX / fact(i);
			i = i + 1;
		}
		//returns the first and second value plus the subsequent answers up to n
		return (1 + x + ans);
	}
	
	
	//i counts down starting from (x-1) 
	public static double fact(int x) {
		double ans = x;
		int i = x - 1;
		while (i >= 0) {
			ans = ans * i;
			i = i - 1;
		}
		return ans;
		
	}

}
