
public class VariableLengthArguments35 {

	public static void main(String[] args) {
		
		
		average(23,423,43,234,324,42,23,234,42,42,34,34,34,34,4,43,34,234,324,4);

	}

	//... means the amount of variables you are going to put in is unknown right now
	public static int average(int...numbers) {
		int total = 0;
		
		for (int x:numbers) {
			total+=x;
		}
		
		return total/numbers.length;
		
	}
}
