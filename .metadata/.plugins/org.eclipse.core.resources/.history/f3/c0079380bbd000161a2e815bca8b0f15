package Tests;

import java.util.Arrays;
import java.util.Random;

public class RandomValues {

	public static int[] randomArray(int size) {
		Random random = new Random();
		int[] a = new int[size];
		for (int i = 0; i < a.length; i++) {
			a[i] = random.nextInt(100);
		}
		return a;
	}

	public static void main(String[] args) {
		int[] newArray = Arrays.copyOf(randomArray(99), ((randomArray(99).length)));

		System.out.print("{" + newArray[0] + ", " + newArray[1]);
		for (int i = 2; i < newArray.length; i++) {
			if (i % 2 == 0) {
				System.out.println(", " + newArray[i] + "\n");
			} else {
				System.out.print(", " + newArray[i]);
			}
		}
		System.out.println("}");

		// System.out.println(Arrays.toString(randomArray(99)));

	}

}
