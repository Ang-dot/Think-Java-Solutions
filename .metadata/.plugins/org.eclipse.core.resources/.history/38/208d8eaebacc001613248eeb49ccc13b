
public class Factorial {

	public static void main(String[] args) {
		System.out.println(myexp(3, 3));

	}

	public static double myexp(double x, int n) {
		System.out.println("No. of terms to be added in the "
				+ "series e ^ " + x + ": " + n);
		// declarations for the loop
		double ansX = x;
		double ans = 0;
		int i = 2;
		while (i<=n) {
		ansX = ansX*x;
		ans = ans + ansX/fact(i);
		i = i + 1;
		}
		return (1 + x + ans);
		}

	// i counts down starting from (x-1)
	public static double fact(int x) {
		double ans = x;
		int i = x - 1;
		while (i >= 0) {
			ans = ans * i;
			i = i - 1;
		}
		return ans;

	}

}
