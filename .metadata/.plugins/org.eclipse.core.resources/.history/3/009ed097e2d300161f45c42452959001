
public class TableForMultiArray {

	public static void main(String[] args) {
		int[][] firstArray = { { 2, 4, 6, 8 }, { 5, 6, 7, 8, 9, }, { 8, 9, 10, 11, 12, 13, 14 } };
		int[][] secondArray = { { 14, 16, 18, 20, 22, 24 }, { 40, 42, 44, 46, 48 }, { 80, 83, 84, 86, 88 } };
		int[][] thirdArray = { { 14, 16, 18, 20, 22, 24 }, { 40, 42, 44, 46, 48 }, { 80, 83, 84, 86, 88 },
				{ 4, 6, 8, 12, 15, 766, 42, 91, 901 }, { 43, 65, 24, 92, 04, 51 } };

		// display the elements of firstArray & secondArray
		displayAsArray(firstArray);
		displayAsArray(secondArray);

		// Print the 0th row, 4th element of thirdArray
		// System.out.println(returnElement(thirdArray, 0,4));
	}

	public static int returnElement(int[][] array, int row, int col) {
		return array[row][col];
	}

	/**
	 * Returns a 2D array in the same format as when you assign it. Manually
	 * displays a 2D array as they are assigned.
	 * 
	 * @param x
	 *            The 2D array to be formatted.
	 */
	public static void displayAsArray(int[][] x) {
		int lastElement = 0;
		System.err.print("{");
		// loop through rows and display every element
		for (int row = 0; row < x.length; row++) {
			System.out.print("{");
			for (int col = 0; col < x[row].length; col++) {
				// if it's the last element, forego putting the comma after the
				// array element
				if ((col == (x[row].length - 1))) {
					System.out.print(x[row][col]);
					lastElement = x[row][col];
				} else {
					System.out.print(x[row][col] + ", ");
				}
			}

			// if it's the last element of a row, don't put a comma after it
			// this handles the very last }
			if (row == lastElement - 1) {
				System.out.print("}");
			} else {
				System.out.print("}, ");
			}
		}
		System.out.println("}");
	}
}
