	}

	/**
	 * Squares all the numbers in an array and displays it
	 * @param b The array.
	 */
	public static void squareArray(double[] b) {
		double sum = 0;
		for (int i = 0; i < b.length; i++) {
			b[i] = sum + b[i] * b[i];
			System.out.println(b[i]);
		}
	}
	
	
