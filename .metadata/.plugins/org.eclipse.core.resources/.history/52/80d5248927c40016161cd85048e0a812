import java.util.Scanner;


public class InToCm32 {
	public static void main(String[] args) {
		int inch;
		double cm;
		double cmRate = 2.54;
		Scanner in = new Scanner(System.in);
		System.out.print("How many inches?");
		inch = in.nextInt();
		cm = (inch * cmRate);
		System.out.print(inch + " in = ");
		System.out.println(cm + " cm");
	}
}
