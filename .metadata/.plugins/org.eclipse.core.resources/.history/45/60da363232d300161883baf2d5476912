package Tests;

import java.util.Arrays;
import java.util.Random;
/**
 * Just created this to test my knowledge.. Testing random numbers again and inRange methods.
 * @author Quan Truong
 * Jan 5, 2017 3:30:30 AM
 */

public class inRangeTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] array = randomArray(26);
		System.out.println(Arrays.toString(array));

	}
	
	public static int[] randomArray(int size) {
		
		Random random = new Random();
		int[] a = new int[size];
		
		
		for (int i=0; i<size; i++) {
			//100 is inclusive
			a[i] = random.nextInt(100);
		}
		return a;
	}
	
	public static int inRange(int[] arr, int low, int high) {
		int count = 0;
		
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] >= low && arr[i] <= high) {
				count++;
			}
		}
		return count;
	}

}
