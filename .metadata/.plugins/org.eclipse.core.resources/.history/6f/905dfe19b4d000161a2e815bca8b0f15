package Traversals;

/**
 * Reduce the array to a single value. 
 * @author Quan Truong
 *
 */
public class Reduction {

	public static void main(String[] args) {
		
		double[] a = {3,2,4,5};
		
		search(a, 3);
		
		System.out.println(reduce(a));

	}
	
	//Search through an array for a target. Uses reduction (reduce array to single value)
	public static int search(double[]a, double target) {
		for (int i=0; i< a.length; i++) {
			if (a[i] == target) {
				System.out.println(i);
				return i;
			}
		}
		return -1;
	}
	
	/**
	 * Add all the elements of an array.
	 * @param a The array of elements to be added together.
	 * @return Sum of all elements in the array, double value.
	 */
	public static double reduce(double[] a) {
		double total = 0;
		for (int i = 0; i < a.length; i++) {
			total += a[i];
		}
		return total;
		
	}

}
